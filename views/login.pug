include includes/head.pug
body
  include includes/nav.pug
  main.container.border.rounded.bg-light.w-50.mx-auto.mt-4.p-4
    if messages.error
      p #{messages.error}
    form.contrast-bg.border.rounded.w-50.mx-auto.mt-5.p-3(action="/login" method="POST" name="login")
      .from-group
        h1.mb-3.text-center Login to your Recipe Box
        label(for='login')
        input#email.form-control(type='email' placeholder='Jonny@this.com' name='email' required='')
        input#password.form-control(type='password' placeholder="Password" name='password' style = 'margin-bottom: 1px;' required='')
        .form-group.mt-3.mb-0
            button.btn.btn-primary(type='submit' value='Submit') Login
        a(href="/register") Register
  include includes/foot.pug 