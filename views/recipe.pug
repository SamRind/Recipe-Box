include includes/head.pug
body
  include includes/nav.pug
  main.container.border.rounded.bg-light.w-50.mx-auto.mt-4.p-4.contrast-bg
    form(action="/recipe" method="POST" name="recipe")
      div.row
        div.col-sm-8
          h1.mb-3.text-center#recipe #{recipe}
          p #{description}
          a #{url}
          h3.mb-3.text-center Yields: #{yields}
        div.col-sm-4 
          img.img-responsive.recipe-img(src=image, alt="image")
          button.btn.btn-primary(type='submit')  Save to my box
      div.row
        h2.mb-3 Ingredients:
        ul#ingredients
          each item in ingredients
            li= item
        h2.mb-3 Instructions:
        ul#instructions 
          each item in instructions 
            li= item 
  include includes/foot.pug