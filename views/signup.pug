include includes/head.pug
body.bg-info
    include includes/nav.pug
    main.container.border.rounded.bg-light.w-50.mx-auto.mt-4.p-4
        form.bg-light.border.rounded.w-50.mx-auto.mt-5.p-3(name='Signup' action='/submit' method='POST')
            h1.mt-2.mb-4 
                .form-group
                    label(for='name') Name* 
                    input#name.form-control(type='text' name='name' required='')
                .form-group
                    label(for='email') Email* 
                    input#email.form-control(type='email' name='email' placeholder='Enter email' required='')
                .form-group
                    label(for='Comments') Comments?
                    textarea#Comments.form-control.rounded-0(name='Comments' rows='3')
                .form-group
                    input#signup(type='checkbox' name='signup' checked='checked')
                    label(for='signup') Sign up for the newsletter
                .form-group.mt-3.mb-0
                    button.btn.btn-primary(type='submit')  Submit
                    button.btn.btn-secondary(type='reset') Reset
                    include includes/foot.pug